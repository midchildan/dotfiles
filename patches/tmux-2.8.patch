 bind -T buffer p choose-buffer -Z
-bind -T buffer + choose-buffer -Z { run "tmux show-buffer -b '%%' | xclip -i -sel clip" }
+bind -T buffer + choose-buffer -Z 'run "tmux show-buffer -b \'%%\' | xclip -i -sel clip"'
 bind -T buffer Any switch-client -T prefix
 
