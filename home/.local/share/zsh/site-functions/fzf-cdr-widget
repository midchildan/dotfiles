# vim:set et sw=2 ts=8 ft=zsh:

local -a reply
autoload -Uz chpwd_recent_filehandler && chpwd_recent_filehandler $reply

setopt localoptions pipefail 2> /dev/null
local dir="$(for line in $reply; do echo "$line"; done | fzf --height 50% --reverse +m)"
if [[ -z "$dir" ]]; then
  zle redisplay
  return 0
fi
cd "$dir"
local ret=$?

autoload -Uz rerun-precmd && zle -N rerun-precmd
zle rerun-precmd
zle reset-prompt
typeset -f zle-line-init >/dev/null && zle zle-line-init
return $ret
