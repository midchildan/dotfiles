emulate -L zsh

autoload -Uz fzf-widgets && fzf-widgets || return 1

fzf-cdr-widget() {
  emulate -L zsh

  local -a reply
  autoload -Uz chpwd_recent_filehandler && chpwd_recent_filehandler $reply

  setopt localoptions pipefail 2> /dev/null
  local dir="$(for line in $reply; do echo "$line"; done | FZF_DEFAULT_OPTS="--height ${FZF_TMUX_HEIGHT:-40%} --reverse $FZF_DEFAULT_OPTS" $(__fzfcmd) +m)"
  if [[ -z "$dir" ]]; then
    zle redisplay
    return 0
  elif [[ ! -d "$dir" ]]; then
    autoload -Uz cdr && { cdr -P "$dir"; cdr -P "$dir/**" }
    zle redisplay
    zle -M "No such directory: $dir"
    return 0
  fi
  cd "$dir"
  unset dir
  local ret=$?
  zle fzf-redraw-prompt
  return $ret
}

fzf-cdr-widget
