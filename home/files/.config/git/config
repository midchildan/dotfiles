[include]
	path = ~/.config/git/user
[core]
	pager = delta
[diff]
	algorithm = histogram
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[rebase]
	autosquash = true
[pull]
	ff = only
[push]
	default = simple
[alias]
	exec = "!exec " # run a shell command from the top directory
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = /Applications/kitty.app/Contents/MacOS/kitty /Applications/kitty.app/Contents/MacOS/kitty +kitten diff $LOCAL $REMOTE
[merge "ours"]
	driver = true
[mergetool "vimdiff"]
	path = nvim
[mergetool "vimdiff2"]
	path = nvim
[mergetool "vimdiff3"]
	path = nvim
[protocol "keybase"]
	allow = always
[delta]
	line-numbers = true
	max-line-length = 0
	navigate = true
[ghq]
	root = ~/Documents/src/go/src
	root = ~/Documents/src/repos
