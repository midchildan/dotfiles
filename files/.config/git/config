[include]
	path = ~/.config/git/hmconfig
[diff]
	algorithm = histogram
	colorMoved = default
[init]
	defaultBranch = main
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[pull]
	ff = only
[push]
	default = simple
[rebase]
	autosquash = true
[alias]
	exec = "!exec " # run a shell command from the top directory
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[merge "ours"]
	driver = true
[mergetool "vimdiff"]
	path = nvim
[mergetool "vimdiff2"]
	path = nvim
[mergetool "vimdiff3"]
	path = nvim
[protocol "keybase"]
	allow = always
[delta]
	line-numbers = true
	max-line-length = 0
	navigate = true
	syntax-theme = gruvbox-dark
[ghq]
